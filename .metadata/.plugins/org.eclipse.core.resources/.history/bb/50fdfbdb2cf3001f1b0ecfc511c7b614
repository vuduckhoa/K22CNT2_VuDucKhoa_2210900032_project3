package com.springmvc.dao;

import com.springmvc.beans.VDK_SAN_PHAM;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;
import java.util.List;

@Repository
public class SanPhamDao {

    private final JdbcTemplate jdbcTemplate;

    public SanPhamDao(JdbcTemplate jdbcTemplate) {
        this.jdbcTemplate = jdbcTemplate;
    }

    public List<VDK_SAN_PHAM> getAll() {
        String sql = "SELECT * FROM VDK_SAN_PHAM";
        return jdbcTemplate.query(sql, new BeanPropertyRowMapper<>(VDK_SAN_PHAM.class));
    }

    public VDK_SAN_PHAM getById(int id) {
        String sql = "SELECT * FROM VDK_SAN_PHAM WHERE ID = ?";
        return jdbcTemplate.queryForObject(sql, new BeanPropertyRowMapper<>(VDK_SAN_PHAM.class), id);
    }

    public void save(VDK_SAN_PHAM sanPham) {
        String sql = "INSERT INTO VDK_SAN_PHAM (vdk_MaSanPham, vdk_TenSanPham, vdk_HinhAnh, vdk_SoLuong, vdk_DonGia, vdk_MaLoai, vdk_TrangThai) VALUES (?, ?, ?, ?, ?, ?, ?)";
        jdbcTemplate.update(sql, sanPham.getVdk_maSanPham(), sanPham.getVdk_tenSanPham(), sanPham.getVdk_hinhAnh(),
                sanPham.getVdk_soLuong(), sanPham.getVdk_donGia(), sanPham.getVdk_maLoai(), sanPham.getVdk_trangThai());
    }

    public void delete(int id) {
        String sql = "DELETE FROM VDK_SAN_PHAM WHERE ID = ?";
        jdbcTemplate.update(sql, id);
    }
}
